<html>
	<head>
		<title>Log In</title>
		<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
		<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>

		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script> 

		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<style type="text/css">
			.bs-example{
				margin: 20px;
			}
		</style>
	</head>
	<body ng-app="companyModule">
		<ui-view></ui-view>
		<script type="text/ng-template" id="/login.html">
			<div class="bs-example">
				<form ng-submit="checkUser()">
					<div class="form-group">
						<label>Email</label>
						<input type="text" placeholder="username" class="form-control" ng-model="username"></input>
					</div>

					<div class="form-group">
						<label>Password</label>
						<input type="password" placeholder="Password" class="form-control" ng-model="password"></input>
					</div>

					<button type="submit" class="btn btn-primary">Log in</button> 
				</form>


				<h1>Sign Up</h1>
				<div class="form-group">
					<form ng-submit="signUp()">
						<input type="text" placeholder="Name" class="form-control" ng-model="companyname"/><br>
						<input type="text" placeholder="Username" class="form-control" ng-model="companyusername"/><br>
						<input type="text" placeholder="Password" class="form-control" ng-model="companypassword"/><br>
						<input type="text" placeholder="Verify Password" class="form-control" ng-model="verifypassword"/><br>
						<button type="submit" class="btn btn-primary">Sign Up!</button> 
					</form>
				</div>
			</div>
		</script>
		<script type="text/ng-template" id="/company.html">
			Welcome, {{company.companyname}}
			<a href="#/jobs">My Jobs</a>
			<a href="#/newjob">New Job</a>
		</script>

		<script type="text/ng-template" id="/jobs.html">
			<div class="bs-example">
				<div class="list-group">
					<div ng-repeat="job in jobs">
						<a href="#jobs" class="list-group-item">
							<h4 class="list-group-item-heading">{{job.jobtitle}}</h4>
							<p class="list-group-item-text">{{job.jobdesc}}</p>
						</a>

					</div>
				</div>
			</div>

		</script>

		<script type="text/ng-template" id="/newjob.html">
			<div class="form-group">
				<form ng-submit="postJob()">
					<input type="text" placeholder="Title" class="form-control" ng-model="jobtitle"/><br>
					<input type="text" placeholder="Description" class="form-control" ng-model="jobdesc"/><br>
					<textarea rows="4" cols="50" placeholder="skills" class="form-control" ng-model="jobskills"></textarea><br>
					<button type="submit" class="btn btn-primary">Post!</button> 
				</form>
			</div>
		</script>


	</body>

	<script src="/javascripts/company.js"></script>
	<script src="/javascripts/services/companyService.js"></script>
	<script src="/javascripts/controllers/CompanyHomeCtrl.js"></script>
	<script src="/javascripts/controllers/LoginCtrl.js"></script>
	<script src="/javascripts/controllers/MyJobCtrl.js"></script>
	<script src="/javascripts/controllers/NewJobCtrl.js"></script>
</html>